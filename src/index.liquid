    <section id="news">
        <div class="headline">
            <p class="super-headline">Making waves since 2004</p>
            <h2>In the News</h2>
        </div>
        <div class="card_section">
            {% assign news = collections.news | reverse %}
            {% for n in news limit:3 %}
            <article>
                <h3><a href='{{ n.url }}'>{{ n.data.title }}</a></h3> 
                <img srcset="{{ n.data.img-s }} 893w, {{ n.data.img }} 3874w"
                    sizes="(max-width: 900px) 893px, 3874px" src="{{ n.data.img }}"
                    alt="{{ n.data.img-alt }}">
                <p>{{ n.data.excerpt }}</p>
                <a href='{{ n.url }}' class="button">Read more</a>
            </article>
            {% endfor %}
        </div>
    </section>
